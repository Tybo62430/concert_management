<form method="post" action="{{ path('admin_concert_delete', {'id': event.id}) }}" onsubmit="return confirm('Voulez vous supprimer ce concert ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
	<button class="btn btn-sm btn-danger">
		<i class="fas fa-trash"></i>
	</button>
</form>
